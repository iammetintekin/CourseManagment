@using Microsoft.AspNetCore.Identity;
@model IdentityUser

<nav class="header-nav ms-auto">

    <ul class="d-flex align-items-center text-small">

        @if (Model.UserName == null)
        {
            <li class="nav-item">
                <a class="nav-link nav-icon" href="@Url.Action("Login","Home")">
                    <i class="bi bi-door"></i>  Giriş
                </a>
            </li>
        }
        else
        {
            <li class="nav-item dropdown">
                <a class="nav-link" href="@Url.Action("Index","Basket")">
                    <i class="bi bi-basket"></i> Seçilen Kurslar
                    <span id="basketItemCount" class="badge bg-primary rounded-0">
                       
                    </span>
                </a>  
            </li>
            <li class="nav-item dropdown pe-3"> 
                <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown" aria-expanded="false"> 
                    <span class="d-none d-md-block dropdown-toggle ps-2">@Model.UserName</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile" style="">

                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Courses","Home")">
                            <i class="bi bi-list"></i>
                            <span>Kurslarım</span>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Logout","Home")">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Oturumu Kapat</span>
                        </a>
                    </li> 
                </ul> 
            </li> 
        }
    </ul>

</nav>