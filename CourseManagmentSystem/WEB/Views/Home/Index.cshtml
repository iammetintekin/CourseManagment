@using WEB.Models.Home;
@model HomeIndexViewModel
@{
    ViewData["Title"] = "Kurslar";
}

<div class="text-center">
    
    <form class="search-form d-flex align-items-center" method="POST" action="#">
        <input type="text" name="query" autocomplete="off" placeholder="Kurs Ara">
        <button type="submit" title="Search"><i class="bi bi-search"></i></button>
    </form>

    <div class="row">
        @foreach (var item in Model.Courses)
        {
            <div class="col-md-4"> 

                <div class="card">

                    <div class="card-body">
                        <a href="@Url.Action("Details","Home", new{ID=item.Id})" class="btn btn-link">   @item.Name  </a>
                        <h6 class="card-subtitle mb-2 text-muted">#@item.Code</h6> 
                    </div>

                    <div class="card-footer">
                        @Component.InvokeAsync("UserRegisteredViewComponent",new{CourseId=item.Id}).Result
                    </div>

                </div>

            </div>
        }
    </div>
</div>
